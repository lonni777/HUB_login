{
  "name": "hub-login-tests-ts",
  "version": "1.0.0",
  "description": "E2E тести Hub (Playwright + TypeScript)",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "allure:generate": "npx --yes allure-commandline@2.36.0 generate ../reports/allure-results -o ../reports/allure-report --clean",
