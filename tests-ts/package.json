    "allure:open": "npx --yes serve ../reports/allure-report -l 9753",
    "allure:rotate": "node scripts/rotate-allure-history.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^16.4.5",
    "pg": "^8.18.0",
    "typescript": "^5.6.0",
    "xlsx": "^0.18.5"
  }
}
